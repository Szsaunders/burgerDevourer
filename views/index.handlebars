<h1>Burger Devourer!</h1>

<h2>Burgers in Waiting</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
    <li>
      <p class="burger-item" id={{this.id}}>{{this.burger_name}}</p>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      <p id={{this.id}}>{{this.burger_name}}</p>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burg</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca">
  </div>

  <button type="submit">Add Burg</button>
</form>
